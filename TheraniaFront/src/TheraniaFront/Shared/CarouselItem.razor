<MudCarouselItem Transition="_transition" Color="@Color.Primary">
    <div class="d-flex">
        <MudText Style="position: absolute; top: 50%; left: 50%;transform: translate(-50%, -50%);">@ItemText</MudText>
        <MudImage ObjectFit="ObjectFit.Contain" Src="@ItemImage"/>
    </div>
</MudCarouselItem>


@code {

    [Parameter]
    public string ItemText { get; set; } = "test text item";

    [Parameter]
    public string? ItemImage { get; set; } = "images/carousel-image.jpg";

    Transition _transition = Transition.Fade;
}