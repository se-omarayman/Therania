@page
@model RegisterTherapistModel
@{
    ViewData["Title"] = "Register as a Therapist";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FullName" class="form-control" aria-required="true"/>
                <label asp-for="Input.FullName"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Age" class="form-control" aria-required="true"/>
                <label asp-for="Input.Age"></label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LicenseType" class="form-control" aria-required="true"/>
                <label asp-for="Input.LicenseType"></label>
                <span asp-validation-for="Input.LicenseType" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LicenseNumber" class="form-control" aria-required="true"/>
                <label asp-for="Input.LicenseNumber"></label>
                <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select name="countries" class="form-control">
                    @foreach (var country in @Model.Countries)
                        {
                            <option value="@country.Name">@country.Name</option>
                        }
                    
                </select>
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Governorate" class="form-control" aria-required="true"/>
                <label asp-for="Input.Governorate"></label>
                <span asp-validation-for="Input.Governorate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MobileNumber" class="form-control" aria-required="true"/>
                <label asp-for="Input.MobileNumber"></label>
                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true"/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" aria-required="true"/>
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true"/>
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ProfilePicture" class="form-control" aria-required="true"/>
                <label asp-for="Input.ProfilePicture"></label>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}